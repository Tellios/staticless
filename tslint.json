{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "trailing-comma": {
            "options": [
                {
                    "multiline": "never",
                    "singleline": "never"
                }
            ]
        },
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-trailing-whitespace": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "no-namespace": false
    }
}