{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start:debug"
            ],
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/dist/run.js",
            "cwd": "${workspaceRoot}/dist",
            "env": {
                "NODE_ENV": "development"
            },
            "args": [
                "--frontend.title",
                "pew"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "smartStep": true,
            "showAsyncStacks": true,
            "outputCapture": "std"
        }
    ]
}