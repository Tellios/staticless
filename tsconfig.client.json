{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": false,
        "alwaysStrict": true,
        "newLine": "LF",
        "outFile": "./dist/client/app.js",
        "target": "es5",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "jsx": "react",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/client/**/*",
        "src/models/**/*"
    ]
}